[MASTER]
extension-pkg-whitelist=pygame
jobs=4

[MESSAGES CONTROL]
disable=
    C0103,  # invalid-name
    C0301,  # line-too-long
    R0903,  # too-few-public-methods
    W0511,  # fixme
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring

[REPORTS]
output-format=colorized
reports=no

[BASIC]
good-names=
    i,j,k,ex,Run,_,
    a,b,op,expr,  # Para la calculadora

[FORMAT]
max-line-length=100

[DESIGN]
max-attributes=15
min-public-methods=1

[IMPORTS]
preferred-modules=os,sys,json,http.server,socketserver,urllib.parse,asyncio,unittest
